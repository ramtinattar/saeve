/** Footer newsletters **/
.footer_block--news {
    width: 100%;
    position: relative;
    display: table;
    top: 20px;
}

.footer_block--newsText {
	margin-top: 30px;
}

.footer_block--news input {
  height: 50px;
}

.footer_block--news input,
.footer_block--news button {
	display: inline-block;
  	width: 49%;
}

.footer__block--bottom {
	margin-bottom: 15px;
}

.footer_block--news .Form__Input {
	background-color: white;
}

/** App coockies **/

.cc-banner.cc-bottom {
  	height: 40px;
  	font-size: 11px;
	border-radius: 10px 10px 0 0;
}

.cc-message {
	text-align: center;
}

.cc-window {
	max-width: 100% !important;	
}

.cc-bottom {
	bottom: 0 !important;
}
.cc-btn {
  border-width: 1px !important;
  border-radius: 3px;
}

/** ------------ **/

/** blogs/news **/

.Table, .Rte table {
  white-space: normal !important;
}

#instagram-feed {
  max-width: 100%;
  display: table !important;
}


/** Ou nous trouver? **/
#scasl-app-container {
  z-index: 1;
}


/** Diagnostique **/

.result_text,
.result-description {
  margin-bottom: 20px;
}

/** MEDIA QUERIES **/

@media screen and (max-width: 800px) {
  .cc-window.cc-floating {
    max-width: 100% !important;
    padding: 1em !important;
    font-size: smaller;
    left: 0 !important;
    right: 0 !important;
  }
  
  .cc-bottom {
  	bottom: 0 !important;
  }
  
  .btn_order_size {
  	font-size: 10px;
  }
  .footer__block--bottom {
	padding-bottom: 60px;
  }
  
  .result {
    display: flex;
    flex-direction: column;
  }
  
  .result .result-soin {
  	order: 3;
  }
  
  .result .name {
  	order: 2;
  }
  
  .result .result-description {
    order: 1;
  }

}

@media all and (max-width:850px) {
  .page-result {
    .result-description {
      padding-bottom: 5px;
    }
  }
}